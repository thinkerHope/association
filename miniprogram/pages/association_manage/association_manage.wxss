.cu-list.menu > .cu-item {
  padding-right: 90rpx;
  padding-left: 50rpx;
}

.round-click{
  height: 80rpx;
  width: 80rpx;
  border-radius: 100%;
  position: fixed;
  bottom: 150rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}

.text{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: bold
}
.userclass{
  display: flex;
  flex-direction: column;
}
#intitute{
  margin-bottom: 16rpx;
}
.about-banner {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
}
.price-class{
   color: #515151 !important;
}

.van-swipe-cell__right {
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 18px;
  font-weight: bold;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #515151;
}

.new-member-info {
  display: inline-block;
  box-sizing: border-box;
  min-width: 16px;
  padding: 0 3px;
  color: #fff;
  font-weight: 500;
  font-size: 12px;
  font-family: -apple-system-font, Helvetica Neue, Arial, sans-serif;
  line-height: 1.2;
  text-align: center;
  background-color: #ee0a24;
  border: 1px solid #fff;
  border-radius: 16px;
}

.ass-members-btns {
  display: flex;
  justify-content: space-between;
}

.ass-image-con {
  display: flex;
  justify-content: center;
  padding: 20px 0px;
}

.van-swipe-cell__right .van-button {
  height: 100%;
  width: 60px;
}

.van-card__price .van-card__price-integer {
  color: #ee0a24;
}